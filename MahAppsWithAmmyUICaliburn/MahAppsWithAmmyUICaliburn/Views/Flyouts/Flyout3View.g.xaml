<UserControl x:Class="MahAppsWithAmmyUICaliburn.Views.Flyouts.Flyout3View" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ns0="clr-namespace:AmmySidekick;assembly=AmmySidekick" Width="250" ns0:Ammy.Register="/MahAppsWithAmmyUICaliburn;component/Views/Flyouts/Flyout3View.g.xaml">
  <UserControl.Resources>
    <ResourceDictionary>
      <SolidColorBrush x:Key="ListViewBackground" Color="Transparent"/>
    </ResourceDictionary>
  </UserControl.Resources>
  <StackPanel Margin="10" Orientation="Vertical">
    <Slider Margin="5" Style="{DynamicResource MahApps.Metro.Styles.FlatSlider}" Value="50"/>
    <ListView x:Name="Artists" Height="200" Margin="5" Background="{StaticResource ListViewBackground}" BorderThickness="0" SelectedIndex="0">
      <ListView.View>
        <GridView>
          <GridViewColumn DisplayMemberBinding="{Binding ArtistId}" Header="ID"/>
          <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="artist"/>
        </GridView>
      </ListView.View>
    </ListView>
  </StackPanel>
</UserControl>